---
export interface Props {
  title: string;
}

const { frontmatter, title } = Astro.props;

import "@fontsource/metropolis";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter?.title ?? title}</title>
  </head>
  <body>
    <header class="flex justify-between max-w-screen-lg mx-auto p-4 mt-4">
      <h1 class="text-4xl">Gustavo Santos</h1>
      <navbar>
        <ul class="flex gap-2">
          <li
            class="px-4 py-2 h-full hover:bg-gray-100 rounded-md cursor-pointer font-semibold tracking-wide"
          >
            Home
          </li>
          <li
            class="px-4 py-2 h-full hover:bg-gray-100 rounded-md cursor-pointer font-semibold tracking-wide"
          >
            Blog
          </li>
          <li
            class="px-4 py-2 h-full hover:bg-gray-100 rounded-md cursor-pointer font-semibold tracking-wide"
          >
            Work
          </li>
        </ul>
      </navbar>
    </header>
    <main class="max-w-screen-md mx-auto p-4">
      <slot />
    </main>
  </body>
</html>
